---
// Homepage for Internal Transit
// Displays a magazine-style layout with featured blog posts, podcast episode, and portfolio projects
// Includes hero section, featured content, and newsletter signup
import { getCollection } from 'astro:content';

// Fetch content collections
const blogPosts = await getCollection('blog');
const podcastEpisodes = await getCollection('podcast');
const projects = await getCollection('projects');

// Get featured/recent blog posts (3 most recent, excluding drafts)
const featuredPosts = blogPosts
  .filter(post => !post.data.draft)
  .sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime())
  .slice(0, 3);

// Get latest podcast episode
const latestEpisode = podcastEpisodes.sort((a, b) => b.data.episode - a.data.episode)[0];

// Get featured portfolio projects (2-3 with featured: true)
const featuredProjects = projects
  .filter(p => p.data.featured)
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
  .slice(0, 3);

// Format date helper
function formatDate(date: Date): string {
  return new Date(date).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
  });
}
