---
// Footer.astro - Site footer with links, social media, and newsletter CTA
// Provides site navigation, social links, and content updates signup
// Uses beige background with charcoal text and orange accents

import Newsletter from './Newsletter.astro';

const currentYear = new Date().getFullYear();

const footerLinks = [
  { label: 'Blog', href: '/blog' },
  { label: 'Podcast', href: '/podcast' },
  { label: 'Portfolio', href: '/portfolio' },
  { label: 'About', href: '/about' },
];

const socialLinks = [
  {
    label: 'Twitter',
    href: 'https://twitter.com',
    icon: 'twitter',
  },
  {
    label: 'LinkedIn',
    href: 'https://linkedin.com',
    icon: 'linkedin',
  },
  {
    label: 'GitHub',
    href: 'https://github.com',
    icon: 'github',
  },
];
---

<footer class="bg-transit-beige border-t border-gray-200">
  <div class="container-wide py-12">
    {/* Footer Content Grid */}
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
      {/* About Section */}
      <div>
        <h3 class="text-lg font-pixel text-transit-charcoal mb-4">
          Internal Transit
        </h3>
        <p class="text-gray-700 text-sm leading-relaxed">
          A personal knowledge management and discussion space for capturing thoughts,
          ideas, and explorations.
        </p>
      </div>

      {/* Navigation Links */}
      <div>
        <h4 class="text-base font-pixel text-transit-charcoal mb-4">
          Navigation
        </h4>
        <ul class="space-y-2">
          {footerLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-gray-700 hover:text-transit-orange transition-colors text-sm"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      {/* Social Links */}
      <div>
        <h4 class="text-base font-pixel text-transit-charcoal mb-4">
          Follow
        </h4>
        <div class="flex gap-4">
          {socialLinks.map((link) => (
            <a
              href={link.href}
              title={link.label}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-700 hover:text-transit-orange transition-colors"
              aria-label={`Follow on ${link.label}`}
            >
              {/* Social Media Icons */}
              {link.icon === 'twitter' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2s9 5 20 5a9.5 9.5 0 00-9-5.5c4.75 2.25 9 5.5 9 5.5" />
                </svg>
              )}
              {link.icon === 'linkedin' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M16 8a6 6 0 016 6v7h-4v-7a2 2 0 00-2-2 2 2 0 00-2 2v7h-4v-7a6 6 0 016-6zM2 9h4v12H2z" />
                  <circle cx="4" cy="4" r="2" />
                </svg>
              )}
              {link.icon === 'github' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.865 8.17 6.839 9.49.5.092.682-.217.682-.482 0-.237-.008-.868-.013-1.703-2.782.603-3.369-1.343-3.369-1.343-.454-1.156-1.11-1.463-1.11-1.463-.908-.62.069-.608.069-.608 1.003.07 1.531 1.03 1.531 1.03.892 1.529 2.341 1.545 2.914 1.184.092-.923.35-1.545.636-1.9-2.22-.253-4.555-1.11-4.555-4.943 0-1.091.39-1.984 1.029-2.683-.103-.253-.446-1.27.098-2.647 0 0 .84-.269 2.75 1.025A9.578 9.578 0 0112 6.836c.85.004 1.705.114 2.504.336 1.909-1.294 2.747-1.025 2.747-1.025.546 1.377.203 2.394.1 2.647.64.699 1.028 1.592 1.028 2.683 0 3.842-2.339 4.687-4.566 4.935.359.309.678.919.678 1.852 0 1.336-.012 2.415-.012 2.743 0 .267.18.578.688.48C19.137 20.167 22 16.418 22 12c0-5.523-4.477-10-10-10z" />
                </svg>
              )}
            </a>
          ))}
        </div>
      </div>
    </div>

    {/* Transit Line Separator */}
    <div class="transit-line-thin"></div>

    {/* Newsletter Signup Section */}
    <div class="my-8">
      <h3 class="text-lg font-pixel text-transit-charcoal mb-4">
        Stay Updated
      </h3>
      <p class="text-gray-700 text-sm mb-4">
        Subscribe to the newsletter for new content, episodes, and project updates.
      </p>
      <Newsletter />
    </div>

    {/* Transit Line Separator */}
    <div class="transit-line-thin"></div>

    {/* Copyright and Credits */}
    <div class="pt-8 text-center text-sm text-gray-600">
      <p>
        &copy; {currentYear} Internal Transit. All rights reserved.
      </p>
      <p class="mt-2">
        Built with <a href="https://astro.build" target="_blank" rel="noopener noreferrer" class="text-transit-orange hover:underline">Astro</a> and
        <a href="https://tailwindcss.com" target="_blank" rel="noopener noreferrer" class="text-transit-orange hover:underline">Tailwind CSS</a>
      </p>
    </div>
  </div>
</footer>
